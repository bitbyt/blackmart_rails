<% provide(:title, "Contraband shopping made easy") %>
<div class="jumbotron jumbotron-home text-center">
  <div class="container-fluid">
    <h1>Contraband, delivered right to your doorstep.</h1>
    <h3>Free delivery on your first purchase above $300</h3>

    <a class="btn btn-lg btn-hero" href="/shop">Shop Now</a>
  </div>
</div>
<div class="container-fluid">
  <div class="col-sm-3 col-md-2 hidden-xs">
    <h3>Categories</h3>
    <div class="sidebar">
      <ul class="nav nav-pills nav-stacked">
        <% @categories.each do |category| %>
          <li><%= link_to category.name, category %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-sm-9 col-md-10">
    <div class="row">
      <% @products.each do |product| %>
        <%= render "products/product_row", product: product, order_item: @order_item %>
      <% end %>
    </div>
  </div>
</div>
