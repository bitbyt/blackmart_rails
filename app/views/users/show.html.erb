<% provide(:title, @user.name) %>
<div class="container-fluid">
  <div class="row">
    <% if current_user.admin? %>
    <%= render 'dashboard' %>
    <% else %>
    <aside class="col-md-4">
      <section>
        <h2>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h2>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <%= render 'follow_form' if logged_in? %>
    </aside>
    <% end %>
  </div>
</div>
